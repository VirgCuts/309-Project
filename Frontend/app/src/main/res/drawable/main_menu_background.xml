<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startY="0"
                android:endY="0"
                android:startColor="#3F51B5"
                android:centerColor="#B203A9F4"
                android:centerY="50%"
                android:endColor="@color/boardColor"
                android:angle="30"
                />
        </shape>
    </item>
    <item>
        <bitmap
            android:alpha="0.3"
            android:src="@drawable/music_logo"
            android:gravity="fill">

        </bitmap>
    </item>
</layer-list>
