<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1: "
        android:textSize="30sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:  "
        android:textSize="30sp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_below="@id/text_view_p1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Row 1"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Row 2"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Row 3"
            app:layout_column="0"
            app:layout_row="3" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Col 1"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Col 2"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Col 3"
            app:layout_column="3"
            app:layout_row="0" />

        <EditText
            android:id="@+id/r1c1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="1"
            app:layout_row="1" />

        <EditText
            android:id="@+id/r1c2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="1"
            app:layout_row="2" />

        <EditText
            android:id="@+id/r1c3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="1"
            app:layout_row="3" />

        <EditText
            android:id="@+id/r2c1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="2"
            app:layout_row="1" />

        <EditText
            android:id="@+id/r2c2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="2"
            app:layout_row="2" />

        <EditText
            android:id="@+id/r2c3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="2"
            app:layout_row="3" />

        <EditText
            android:id="@+id/r3c1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="3"
            app:layout_row="1" />

        <EditText
            android:id="@+id/r3c2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="3"
            app:layout_row="2" />

        <EditText
            android:id="@+id/r3c3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_column="3"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>



